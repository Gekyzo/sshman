<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Property for SSH directory -->
    <property name="SSH_DIR" value="${user.home}/.ssh" />
    <property name="LOG_FILE" value="${SSH_DIR}/sshman.log" />

    <!-- File Appender - logs to ~/.ssh/sshman.log -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>${LOG_FILE}</file>
        <append>true</append>
        <encoder>
            <pattern>[%date{yyyy-MM-dd HH:mm:ss}] %logger{0}:%level - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Console Appender - only for ERROR level (to avoid cluttering CLI output) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger for sshman commands -->
    <logger name="com.sshman" level="INFO" additivity="false">
        <appender-ref ref="FILE" />
    </logger>

    <!-- Root logger -->
    <root level="WARN">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>
